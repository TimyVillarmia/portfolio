---
const { project } = Astro.props;
import { Icon } from 'astro-icon/components';
---

<a href={project.link}target="_blank"  class="group slide-top no-underline flex flex-row items-center justify-between rounded-lg border-[.5px] border-white py-6 px-8  ">
    <div class="">
        <p class="font-bold opacity-100">{project.title}</p>
        <p class="font-light">{project.category}</p>
    </div>
    <Icon name="mdi:github" class="text-4xl"/>
</a>
